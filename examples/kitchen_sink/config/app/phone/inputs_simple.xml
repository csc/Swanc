<?xml version="1.0" encoding="UTF-8"?>
<Widget>
    <Id>SimpleInputPage</Id>
    <Class>StandardPage</Class>
    <PreLoad>True</PreLoad>
    <Widgets>
        <!-- HEADER -->
        <Widget>
            <Class>StandardHeader</Class>
            <Widgets>
                <Widget>
                    <Class>BackButton</Class>
                </Widget>
                <Widget>
                    <Class>StandardHeaderText</Class>
                    <Text>Simple Input</Text>
                </Widget>
            </Widgets>
        </Widget>
        <!-- ONE LINE INPUT-->
        <Widget>
            <Y>65</Y>
            <X>6%</X>
            <Class>Text</Class>
            <Style>
                <Colour>#000000</Colour>
            </Style>
            <Font>Arial</Font>
            <FontSize>14</FontSize>
            <Text>Name: </Text>
        </Widget>
        <Widget>
            <Id>NameInput</Id>
            <Class>Input</Class>
            <Y>90</Y>
            <H>30</H>
            <W>80%</W>
            <L>100</L>
            <Div>main</Div>
            <AlignHoz>CENTER</AlignHoz>
            <InputText>
                <Widget>
                    <Class>Text</Class>
                    <Style>
                        <Colour>#000000</Colour>
                    </Style>
                    <Font>Arial</Font>
                    <FontSize>14</FontSize>
                    <Text></Text>
                </Widget>
            </InputText>
            <Style>
                <Colour>#FFFFFF</Colour>
                <BorderColour>#000000</BorderColour>
                <BorderW>1</BorderW>
            </Style>
        </Widget>
        <!-- PASSWORD INPUT-->
        <Widget>
            <Y>155</Y>
            <X>6%</X>
            <Class>Text</Class>
            <Style>
                <Colour>#000000</Colour>
            </Style>
            <Font>Arial</Font>
            <FontSize>14</FontSize>
            <Text>Password: </Text>
        </Widget>
        <Widget>
            <Id>PasswordInput</Id>
            <Class>Input</Class>
            <Y>180</Y>
            <H>30</H>
            <W>80%</W>
            <L>100</L>
            <Div>main</Div>
            <AlignHoz>CENTER</AlignHoz>
            <InputText>
                <Widget>
                    <Class>Text</Class>
                    <Style>
                        <Colour>#000000</Colour>
                    </Style>
                    <Font>Arial</Font>
                    <FontSize>14</FontSize>
                    <Text></Text>
                </Widget>
            </InputText>
            <Style>
                <Colour>#FFFFFF</Colour>
                <BorderColour>#000000</BorderColour>
                <BorderW>1</BorderW>
            </Style>
            <Password>True</Password>
        </Widget>
        <!-- MultiLine INPUT-->
        <Widget>
            <Y>245</Y>
            <X>6%</X>
            <Class>Text</Class>
            <Style>
                <Colour>#000000</Colour>
            </Style>
            <Font>Arial</Font>
            <FontSize>14</FontSize>
            <Text>MultiLine Input: </Text>
        </Widget>
        <Widget>
            <Id>MultiLineInput</Id>
            <Class>Input</Class>
            <Y>270</Y>
            <H>120</H>
            <W>80%</W>
            <L>100</L>
            <Div>main</Div>
            <AlignHoz>CENTER</AlignHoz>
            <InputText>
                <Widget>
                    <Class>Text</Class>
                    <Style>
                        <Colour>#000000</Colour>
                    </Style>
                    <Font>Arial</Font>
                    <FontSize>14</FontSize>
                    <Text></Text>
                </Widget>
            </InputText>
            <Style>
                <Colour>#FFFFFF</Colour>
                <BorderColour>#000000</BorderColour>
                <BorderW>1</BorderW>
            </Style>
            <MultiLine>True</MultiLine>
        </Widget>
    </Widgets>
    <Style>
        <Colour>#00C8FA</Colour>
    </Style>
    <TransformationName>PAGE_SLIDE_RIGHT</TransformationName>
    <Stages>
        <AfterOpen>INPUTS_SIMPLE_PAGE_AFTER_OPEN</AfterOpen>
        <Close>INPUTS_SIMPLE_PAGE_CLOSE</Close>
    </Stages>
</Widget>
            