<?xml version="1.0" encoding="UTF-8"?>
<Widget>
    <Id>SimpleHorizontalListPage</Id>
    <Class>StandardPage</Class>
    <PreLoad>True</PreLoad>
    <Widgets>
        <!-- HEADER -->
        <Widget>
            <Class>StandardHeader</Class>
            <Widgets>
                <Widget>
                    <Class>BackButton</Class>
                </Widget>
                <Widget>
                    <Class>StandardHeaderText</Class>
                    <Text>Simple Horizontal List</Text>
                </Widget>
            </Widgets>
        </Widget>
        <!-- LIST HEADER WITH SWITCH -->
        <Widget>
            <Id>SimpleHorizontalListHeader</Id>
            <Class>Fragment</Class>
            <Y>50</Y>
            <H>50</H>
            <W>100%</W>
            <L>1000</L>
            <Widgets>
                <Widget>
                    <Class>Text</Class>
                    <L>100</L>
                    <Style>
                        <Colour>#000000</Colour>
                    </Style>
                    <Font>Arial</Font>
                    <FontSize>16</FontSize>
                    <AlignHoz>RIGHT</AlignHoz>
                    <AlignVert>CENTER</AlignVert>
                    <AlignSpacingHoz>110</AlignSpacingHoz>
                    <Text>Show Items Out of List Area</Text>
                </Widget>
                <Widget>
                    <Id>ListHOnSwitchImage</Id>
                    <Class>Image</Class>
                    <PreLoadImage>True</PreLoadImage>
                    <AlignHoz>RIGHT</AlignHoz>
                    <AlignVert>CENTER</AlignVert>
                    <AlignSpacingHoz>5</AlignSpacingHoz>
                    <W>100</W>
                    <H>32</H>
                    <L>27</L>
                    <Src>img/lists/on_switch.png</Src>
                    <Click>
                        <Action>LIST_SIMPLE_HORIZONTAL_ON_ACTION</Action>
                    </Click>
                </Widget>
                <Widget>
                    <Id>ListHOffSwitchImage</Id>
                    <Class>Image</Class>
                    <PreLoadImage>True</PreLoadImage>
                    <AlignHoz>RIGHT</AlignHoz>
                    <AlignVert>CENTER</AlignVert>
                    <AlignSpacingHoz>5</AlignSpacingHoz>
                    <W>100</W>
                    <H>32</H>
                    <L>27</L>
                    <Src>img/lists/off_switch.png</Src>
                    <Hidden>True</Hidden>
                    <Click>
                        <Action>LIST_SIMPLE_HORIZONTAL_OFF_ACTION</Action>
                    </Click>
                </Widget>
            </Widgets>
            <Style>
                <Colour>#C5C5C5</Colour>
            </Style>
        </Widget>
        <!-- SIMPLE HORIZONTAL LIST -->
       <Widget>
            <Id>SimpleHorizontalList</Id>
            <Class>List</Class>
            <X>0</X>
            <W>100%</W>
            <H>225</H>
            <L>1</L>
            <AlignVert>CENTER</AlignVert>
            <GapSize>20</GapSize>
            <WidgetsCanBeMoved>False</WidgetsCanBeMoved>
            <Vertical>False</Vertical>
            <ShowOutOfArea>True</ShowOutOfArea>
            <Widgets>
                <Widget>
                    <Class>Image</Class>
                    <PreLoadImage>True</PreLoadImage>
                    <W>150</W>
                    <H>225</H>
                    <L>1</L>
                    <Src>img/lists/list_item_1.png</Src>
                </Widget>
                <Widget>
                    <Class>Image</Class>
                    <PreLoadImage>True</PreLoadImage>
                    <W>150</W>
                    <H>225</H>
                    <L>1</L>
                    <Src>img/lists/list_item_2.png</Src>
                </Widget>
                <Widget>
                    <Class>Image</Class>
                    <PreLoadImage>True</PreLoadImage>
                    <W>150</W>
                    <H>225</H>
                    <L>1</L>
                    <Src>img/lists/list_item_3.png</Src>
                </Widget>
            </Widgets>
        </Widget>
    </Widgets>
    <Style>
        <Colour>#FFFFFF</Colour>
    </Style>
    <TransformationName>PAGE_SLIDE_UP</TransformationName>
    <Stages>
        <OpenPage>LISTS_SIMPLE_HORIZONTAL_PAGE_OPEN</OpenPage>
    </Stages>
</Widget>
            