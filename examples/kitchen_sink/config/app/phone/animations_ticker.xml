<?xml version="1.0" encoding="UTF-8"?>
<Widget>
    <Id>AnimationsSimpleTickerPage</Id>
    <Class>StandardPage</Class>
    <PreLoad>True</PreLoad>
    <Widgets>
        <!-- HEADER -->
        <Widget>
            <Class>StandardHeader</Class>
            <Widgets>
                <Widget>
                    <Class>BackButton</Class>
                </Widget>
                <Widget>
                    <Class>StandardHeaderText</Class>
                    <Text>Animations</Text>
                </Widget>
            </Widgets>
        </Widget>
        <!-- TICKER ANIMATION -->
        <Widget>
            <Id>TickerAnimation</Id>
            <Class>Animation</Class>
            <Y>80</Y>
            <W>150</W>
            <H>225</H>
            <L>100</L>
            <AlignHoz>CENTER</AlignHoz>
            <Style>
                <Colour>#FFFFFF</Colour>  
                <BorderW>2</BorderW>
                <BorderColour>#FFFFFF</BorderColour>
                <Rounded>True</Rounded>
            </Style>
            <AnimationTimeout>1500</AnimationTimeout>
            <Animate>ANIMATIONS_TICKER_ANIMATE</Animate>
            <Widgets>
                <Widget>
                    <Class>Image</Class>
                    <PreLoadImage>True</PreLoadImage>
                    <X>0</X>
                    <Y>0</Y>
                    <W>100%</W>
                    <H>100%</H>
                    <L>1</L>
                    <Src>img/lists/list_item_1.png</Src>
                </Widget>
                <Widget>
                    <Class>Image</Class>
                    <PreLoadImage>True</PreLoadImage>
                    <X>0</X>
                    <Y>0</Y>
                    <W>100%</W>
                    <H>100%</H>
                    <L>1</L>
                    <Src>img/lists/list_item_2.png</Src>
                    <Hidden>True</Hidden>
                </Widget>
                <Widget>
                    <Class>Image</Class>
                    <PreLoadImage>True</PreLoadImage>
                    <X>0</X>
                    <Y>0</Y>
                    <W>100%</W>
                    <H>100%</H>
                    <L>1</L>
                    <Src>img/lists/list_item_3.png</Src>
                    <Hidden>True</Hidden>
                </Widget>
            </Widgets>
        </Widget>
    </Widgets>
    <Style>
        <Colour>#00C8FA</Colour>
    </Style>
    <TransformationName>PAGE_FLOW_RIGHT</TransformationName>
    <Stages>
        <AfterOpen>ANIMATIONS_START_TICKER_PAGE_OPEN</AfterOpen>
        <Close>ANIMATIONS_START_TICKER_PAGE_CLOSE</Close>
    </Stages>
</Widget>
            