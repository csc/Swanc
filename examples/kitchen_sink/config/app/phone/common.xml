<?xml version="1.0" encoding="UTF-8"?>
<CommonWidgets>
    <WidgetSection>
        <Id>Main</Id>  <!-- THIS ALLOWS FOR ONLY SECTIONS TO BE LOADED, WHEN REQUIRED -->
        <PreLoad>True</PreLoad>  <!-- IF PRE LOAD == TRUE, WILL BE PRELOADED ON STARTUP -->
        <SectionWidgets>
            <!-- WIDGETS THAT SHOULD NOT BE REMOVED -->
            <Widget>
                <Id>Button</Id>  <!-- BUTTON IS THE SAME AS FRAGMENT, SO NO NEED TO REPLICATE JS CODE -->
                <Class>Fragment</Class>
            </Widget>
            <!-- END WIDGETS THAT SHOULD NOT BE REMOVED -->
            <Widget>
                <Id>StandardHeaderText</Id>
                <Class>Text</Class>  <!-- THIS IS THE TYPE, CAN BE LINKED TO ABOVE TYPE -->
                <L>100</L>
                <Style>
                    <Colour>#000000</Colour>  <!-- BACK GROUND COLOUR -->
                </Style>
                <Font>Arial</Font>
                <FontSize>18</FontSize>
                <AlignHoz>CENTER</AlignHoz>
                <AlignVert>BOTTOM</AlignVert>
                <AlignSpacingVert>5</AlignSpacingVert>
            </Widget>
            <Widget>
                <Id>StandardHeader</Id>
                <Class>Fragment</Class>
                <X>0</X>
                <AlignVert>TOP</AlignVert>
                <H>50</H>
                <W>100%</W>
                <L>1000</L>
                <Style>
                    <Colour>#EAEEF2</Colour>
                    <Rounded>False</Rounded>
                </Style>
            </Widget>
            <Widget>
                <Id>BackButton</Id>
                <Class>Fragment</Class>
                <H>50</H>
                <W>100</W>
                <AlignHoz>LEFT</AlignHoz>
                <AlignVert>CENTER</AlignVert>
                <L>1000</L>
                <Widgets>
                    <Widget>
                        <Class>Text</Class>  <!-- THIS IS THE TYPE, CAN BE LINKED TO ABOVE TYPE -->
                        <L>100</L>
                        <Style>
                            <Colour>#000000</Colour>  <!-- BACK GROUND COLOUR -->
                        </Style>
                        <Font>Arial</Font>
                        <FontSize>14</FontSize>
                        <AlignHoz>LEFT</AlignHoz>
                        <AlignVert>BOTTOM</AlignVert>
                        <AlignSpacingVert>10</AlignSpacingVert>
                        <AlignSpacingHoz>5</AlignSpacingHoz>
                        <Text>BACK</Text>
                    </Widget>
                </Widgets>
                <Click>
                    <ClosePage>True</ClosePage>
                </Click>
            </Widget>
            <Widget> 
                <Id>StandardPage</Id>
                <Class>Page</Class>
                <X>0</X>
                <Y>0</Y>
                <W>100%</W>
                <H>100%</H>
                <L>1</L>
                <Style>
                    <Colour>#FFFFFF</Colour>
                </Style>
            </Widget>
            <Widget>
                <Id>StandardPageFlow</Id>
                <Class>PageFlow</Class>  <!-- THIS IS THE TYPE, CAN BE LINKED TO ABOVE TYPE -->
                <X>0</X>
                <Y>0</Y>
                <W>100%</W>
                <H>100%</H>
                <L>1</L>
                <TransformationName>PAGE_SLIDE_UP</TransformationName>
            </Widget>
            <Widget>
                <Id>CoverAnimation</Id>
                <Class>Animation</Class>
                <X>0</X>
                <Y>0</Y>
                <W>100%</W>
                <H>100%</H>
                <L>1000</L>
                <Widgets>
                    <Widget>
                        <Id>CoverPage</Id>
                        <Class>StandardPage</Class>
                        <PreLoad>False</PreLoad>
                        <Widgets>
                            <Widget>
                                <Class>Image</Class>
                                <PreLoadImage>True</PreLoadImage>
                                <X>0</X>
                                <Y>0</Y>
                                <W>100%</W>
                                <H>100%</H>
                                <L>1</L>
                                <Src>img/cover_image_320_480.png</Src>
                            </Widget>
                        </Widgets>
                        <SwipeUp>
                            <Action>SWIPE_UP_COVER_PAGE</Action>
                        </SwipeUp>
                    </Widget>
                </Widgets>
                <Animate>ANIMATE_COVER_PAGE</Animate>
                <RedrawAll>True</RedrawAll>
                <AnimationTimeout>1</AnimationTimeout>
            </Widget>
            <Widget>
                <Id>PageButtonList</Id>
                <Class>List</Class>
                <X>0</X>
                <Y>50</Y>
                <W>100%</W>
                <H>80%</H>
                <L>100</L>
                <GapSize>20</GapSize>
                <WidgetsCanBeMoved>False</WidgetsCanBeMoved>
                <Vertical>True</Vertical>
                <ShowOutOfArea>True</ShowOutOfArea>
            </Widget>
            <Widget>
                <Id>PageButton</Id>
                <Class>Fragment</Class>
                <H>30</H>
                <W>80%</W>
                <AlignHoz>CENTER</AlignHoz>
                <L>100</L>
                <Style>
                    <Colour>#000000</Colour>
                    <Transparency>100</Transparency>
                    <Rounded>True</Rounded>
                </Style>
            </Widget>
            <Widget>
                <Id>PageButtonText</Id>
                <Class>Text</Class>
                <L>100</L>
                <Style>
                    <Colour>#FFFFFF</Colour>
                </Style>
                <Font>Arial</Font>
                <FontSize>14</FontSize>
                <AlignHoz>CENTER</AlignHoz>
                <AlignVert>CENTER</AlignVert>
            </Widget>
            <!-- USED FOR THE LISTS -->
            <Widget>
                <Id>SimpleVerticalListFragment</Id>
                <Class>Fragment</Class>
                <H>50</H>
                <W>100%</W>
                <L>100</L>
                <Widgets>
                    <Widget>
                        <Id>SimpleVerticalListFragmentText</Id>
                        <Class>Text</Class>
                        <L>100</L>
                        <Style>
                            <Colour>#000000</Colour>
                        </Style>
                        <Font>Arial</Font>
                        <FontSize>16</FontSize>
                        <AlignHoz>LEFT</AlignHoz>
                        <AlignVert>CENTER</AlignVert>
                        <AlignSpacingHoz>30</AlignSpacingHoz>
                        <Text></Text>
                        <PropogateClick>True</PropogateClick>
                    </Widget>
                    <Widget>
                        <Id>SimpleVerticalListFragmentImage</Id>
                        <Class>Image</Class>
                        <PreLoadImage>True</PreLoadImage>
                        <AlignHoz>RIGHT</AlignHoz>
                        <AlignVert>CENTER</AlignVert>
                        <AlignSpacingHoz>10</AlignSpacingHoz>
                        <W>32</W>
                        <H>32</H>
                        <L>100</L>
                        <Src>img/lists/1-navigation-next-item.png</Src>
                        <PropogateClick>True</PropogateClick>
                    </Widget>
                </Widgets>
                <Click>
                    <ClosePage>True</ClosePage>
                </Click>
                <Style>
                    <Colour>#FAFAFA</Colour>  
                    <BorderW>1</BorderW>
                    <BorderColour>#C5C5C5</BorderColour>
                </Style>
            </Widget>
            <Widget>
                <Id>NewsListFragment</Id>
                <Class>Fragment</Class>
                <H>100</H>
                <W>100</W>
                <L>1</L>
                <Widgets>
                    <Widget>
                        <Id>NewsListFragmentText</Id>
                        <Class>Text</Class>
                        <L>100</L>
                        <Style>
                            <Colour>#000000</Colour>
                        </Style>
                        <Font>Arial</Font>
                        <FontSize>14</FontSize>
                        <AlignHoz>CENTER</AlignHoz>
                        <AlignVert>CENTER</AlignVert>
                        <Text></Text>
                    </Widget>
                </Widgets>
                <Style>
                    <Colour>#CACACA</Colour>
                </Style>
            </Widget>
            <Widget>
                <Id>NewsListHeaderFragment</Id>
                <Class>Fragment</Class>
                <H>30</H>
                <W>100%</W>
                <L>1</L>
                <Widgets>
                    <Widget>
                        <Id>NewsListHeaderFragmentText</Id>
                        <Class>Text</Class>
                        <L>100</L>
                        <Style>
                            <Colour>#000000</Colour>
                        </Style>
                        <Font>Arial</Font>
                        <FontSize>16</FontSize>
                        <AlignHoz>LEFT</AlignHoz>
                        <AlignVert>CENTER</AlignVert>
                        <AlignSpacingHoz>10</AlignSpacingHoz>
                        <Text></Text>
                    </Widget>
                </Widgets>
            </Widget>
            <!-- FOR SPACE GAME -->
            <Widget>
                <Id>Alien</Id>
                <Class>Image</Class>
                <Type>ALIEN</Type>
                <PreLoadImage>True</PreLoadImage>
                <X>0</X>
                <Y>0</Y>
                <W>24</W>
                <H>24</H>
                <L>1</L>
                <Src>img/animations/alien.gif</Src>
                <Hidden>True</Hidden>
            </Widget>
            <Widget>
                <Id>Bomb</Id>
                <Class>Fragment</Class>
                <Type>BOMB</Type>
                <X>0</X>
                <Y>0</Y>
                <H>10</H>
                <W>2</W>
                <L>1</L>
                <Style>
                    <Colour>#FAFAFA</Colour>
                    <Rounded>False</Rounded>
                </Style>
                <Hidden>True</Hidden>
            </Widget>
        </SectionWidgets>
    </WidgetSection>
</CommonWidgets>