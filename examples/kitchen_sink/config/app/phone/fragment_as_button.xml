<?xml version="1.0" encoding="UTF-8"?>
<Widget>
    <Id>FragmentAsButtonPage</Id>
    <Class>StandardPage</Class>
    <PreLoad>True</PreLoad>
    <Widgets>
        <!-- HEADER -->
        <Widget>
            <Class>StandardHeader</Class>
            <Widgets>
                <Widget>
                    <Class>BackButton</Class>
                </Widget>
                <Widget>
                    <Class>StandardHeaderText</Class>
                    <Text>Fragment as Button</Text>
                </Widget>
            </Widgets>
        </Widget>
        <!-- SIMPLE BUTTON -->
        <Widget>
            <Class>Fragment</Class>
            <Y>60</Y>
            <H>40</H>
            <W>90%</W>
            <L>100</L>
            <AlignHoz>CENTER</AlignHoz>
            <Widgets>
                <Widget>
                    <Class>Text</Class>
                    <Style>
                        <Colour>#FFFFFF</Colour>
                    </Style>
                    <Font>Arial</Font>
                    <FontSize>14</FontSize>
                    <Text>Simple Button</Text>
                    <AlignHoz>CENTER</AlignHoz>
                    <AlignVert>CENTER</AlignVert>
                </Widget>
            </Widgets>
            <Style>
                <Colour>#000000</Colour>
                <BorderColour>#FFFFFF</BorderColour>
                <BorderW>2</BorderW>
                <Rounded>True</Rounded>
            </Style>
            <Click>
                <ClosePage>True</ClosePage>
            </Click>
        </Widget>
        <!-- BUTTON + IMAGE -->
        <Widget>
            <Class>Fragment</Class>
            <Y>120</Y>
            <H>40</H>
            <W>90%</W>
            <L>100</L>
            <AlignHoz>CENTER</AlignHoz>
            <Widgets>
                <Widget>
                    <Class>Image</Class>
                    <PreLoadImage>True</PreLoadImage>
                    <AlignHoz>RIGHT</AlignHoz>
                    <AlignVert>CENTER</AlignVert>
                    <AlignSpacingHoz>10</AlignSpacingHoz>
                    <W>32</W>
                    <H>32</H>
                    <L>100</L>
                    <Src>img/fragments/1_navigation_next_item.png</Src>
                    <PropogateClick>True</PropogateClick>
                </Widget>
            </Widgets>
           <Texts>
                <Widget>
                    <Class>Text</Class>
                    <Style>
                        <Colour>#FFFFFF</Colour>
                    </Style>
                    <Font>Arial</Font>
                    <FontSize>14</FontSize>
                    <Text>Button + Image</Text>
                    <AlignHoz>LEFT</AlignHoz>
                    <AlignSpacingHoz>10</AlignSpacingHoz>
                    <AlignVert>CENTER</AlignVert>
                </Widget>
            </Texts>
            <Style>
                <Colour>#000000</Colour>
                <Rounded>True</Rounded>
            </Style>
            <Click>
                <ClosePage>True</ClosePage>
            </Click>
        </Widget>
        <!-- BUTTON + IMAGE -->
        <Widget>
            <Class>Fragment</Class>
            <Y>180</Y>
            <H>100</H>
            <W>100</W>
            <L>100</L>
            <AlignHoz>CENTER</AlignHoz>
            <Widgets>
                <Widget>
                    <Class>Image</Class>
                    <PreLoadImage>True</PreLoadImage>
                    <AlignHoz>CENTER</AlignHoz>
                    <AlignVert>CENTER</AlignVert>
                    <W>32</W>
                    <H>32</H>
                    <L>100</L>
                    <Src>img/fragments/1_navigation_refresh.png</Src>
                    <PropogateClick>True</PropogateClick>
                </Widget>
            </Widgets>
           <Texts>
                <Widget>
                    <Class>Text</Class>
                    <Style>
                        <Colour>#FFFFFF</Colour>
                    </Style>
                    <Font>Arial</Font>
                    <FontSize>14</FontSize>
                    <Text>Large Tap Area for Image Icon</Text>
                    <AlignHoz>CENTER</AlignHoz>
                    <AlignVert>BOTTOM</AlignVert>
                    <AlignIn>False</AlignIn>
                </Widget>
            </Texts>
            <Style>
                <BorderColour>#FFFFFF</BorderColour>
                <BorderW>1</BorderW>
                <Rounded>True</Rounded>
            </Style>
            <Click>
                <ClosePage>True</ClosePage>
            </Click>
        </Widget>
        <!-- BUTTON + IMAGE -->
        <Widget>
            <Class>Fragment</Class>
            <Y>320</Y>
            <H>50</H>
            <W>100%</W>
            <L>100</L>
            <AlignHoz>CENTER</AlignHoz>
            <Texts>
                <Widget>
                    <Class>Text</Class>
                    <Style>
                        <Colour>#FFFFFF</Colour>
                    </Style>
                    <Font>Arial</Font>
                    <FontSize>14</FontSize>
                    <Text>Large Tap Area for Text (Tap me)</Text>
                    <AlignHoz>CENTER</AlignHoz>
                    <AlignVert>CENTER</AlignVert>
                </Widget>
            </Texts>
            <Click>
                <ClosePage>True</ClosePage>
            </Click>
        </Widget>
    </Widgets>
    <Style>
        <Colour>#00C8FA</Colour>
    </Style>
    <TransformationName>PAGE_SLIDE_RIGHT</TransformationName>
</Widget>
            