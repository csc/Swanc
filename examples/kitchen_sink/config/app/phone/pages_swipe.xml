<?xml version="1.0" encoding="UTF-8"?>
<Widget> <!-- AT THIS LEVEL MUST BE WIDGET -->
    <Id>PagesSwipePage</Id>
    <Class>StandardPage</Class>
    <PreLoad>True</PreLoad>
    <Widgets>
        <Widget>
            <Class>Image</Class>
            <PreLoadImage>True</PreLoadImage>
            <X>0</X>
            <Y>0</Y>
            <W>100%</W>
            <H>100%</H>
            <L>1</L>
            <Src>img/slides/slide1.png</Src>
        </Widget>
        <Widget>
            <Class>Fragment</Class>
            <H>30%</H>
            <W>90%</W>
            <L>100</L>
            <AlignHoz>CENTER</AlignHoz>
            <AlignVert>CENTER</AlignVert>
            <Widgets>
                <Widget>
                    <Class>Text</Class>
                    <Style>
                        <Colour>#FFFFFF</Colour>
                    </Style>
                    <Font>Arial</Font>
                    <FontSize>14</FontSize>
                    <Text>Swipe Up/Down and Left/Right</Text>
                    <AlignHoz>CENTER</AlignHoz>
                    <AlignVert>CENTER</AlignVert>
                    <PropogateClick>True</PropogateClick>
                </Widget>
                <Widget>
                    <Class>Text</Class>
                    <Style>
                        <Colour>#FFFFFF</Colour>
                    </Style>
                    <Font>Arial</Font>
                    <FontSize>14</FontSize>
                    <Text>Tap to Continue.</Text>
                    <AlignHoz>CENTER</AlignHoz>
                    <AlignVert>TOP</AlignVert>
                    <AlignSpacingVert>20</AlignSpacingVert>
                    <PropogateClick>True</PropogateClick>
                </Widget>
            </Widgets>
            <Style>
                <Colour>#000000</Colour>
                <Transparency>100</Transparency>
                <Rounded>True</Rounded>
            </Style>
            <Click>
                <Action>CLOSE_SWIPE_INFO_BOX</Action>
            </Click>
        </Widget>
    </Widgets>
    <TransformationName>PAGE_SLIDE_LEFT</TransformationName>
    <SwipeRight>
        <ClosePage>True</ClosePage>
    </SwipeRight>
    <SwipeLeft>
        <Navigation>PagesSwipe2Page</Navigation>
    </SwipeLeft>
    <SwipeDown>
        <Navigation>PagesSwipeTopInfoPage</Navigation>
    </SwipeDown>
    <SwipeUp>
        <ClosePage>True</ClosePage>
    </SwipeUp>
</Widget>
            