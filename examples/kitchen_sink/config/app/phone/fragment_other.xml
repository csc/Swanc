<?xml version="1.0" encoding="UTF-8"?>
<Widget>
    <Id>FragmentOtherPage</Id>
    <Class>StandardPage</Class>
    <PreLoad>True</PreLoad>
    <Widgets>
        <!-- HEADER -->
        <Widget>
            <Class>StandardHeader</Class>
            <Widgets>
                <Widget>
                    <Class>BackButton</Class>
                </Widget>
                <Widget>
                    <Class>StandardHeaderText</Class>
                    <Text>Fragment Others</Text>
                </Widget>
            </Widgets>
        </Widget>
        <!-- BUTTON - TO LOAD POPUP -->
        <Widget>
            <Class>Fragment</Class>
            <Y>60</Y>
            <H>40</H>
            <W>90%</W>
            <L>100</L>
            <AlignHoz>CENTER</AlignHoz>
            <Widgets>
                <Widget>
                    <Class>Text</Class>
                    <Style>
                        <Colour>#FFFFFF</Colour>
                    </Style>
                    <Font>Arial</Font>
                    <FontSize>14</FontSize>
                    <Text>Tap to Popup Fragment</Text>
                    <AlignHoz>CENTER</AlignHoz>
                    <AlignVert>CENTER</AlignVert>
                </Widget>
            </Widgets>
            <Style>
                <Colour>#000000</Colour>
                <BorderColour>#FFFFFF</BorderColour>
                <BorderW>2</BorderW>
                <Rounded>True</Rounded>
            </Style>
            <Click>
                <Action>FRAGMENT_POPUP_ACTION</Action>
            </Click>
        </Widget>
        <!-- ACTUAL POPUP SET TO HIDDEN -->
        <Widget>
            <Id>FragmentPopup</Id>
            <Class>Fragment</Class>
            <H>150</H>
            <W>80%</W>
            <L>1000</L>
            <AlignHoz>CENTER</AlignHoz>
            <AlignVert>CENTER</AlignVert>
            <Widgets>
                <Widget>
                    <Class>Text</Class>
                    <Style>
                        <Colour>#000000</Colour>
                    </Style>
                    <Font>Arial</Font>
                    <FontSize>14</FontSize>
                    <Text>Popup with Message</Text>
                    <AlignHoz>CENTER</AlignHoz>
                    <AlignVert>CENTER</AlignVert>
                </Widget>
                <Widget>
                    <Class>PageButton</Class>
                    <AlignVert>BOTTOM</AlignVert>
                    <AlignHoz>CENTER</AlignHoz>
                    <W>100</W>
                    <AlignSpacingVert>5</AlignSpacingVert>
                    <Texts>
                        <Widget>
                            <Class>PageButtonText</Class>
                            <Text>OK</Text>
                        </Widget>
                    </Texts>
                    <Click>
                        <Action>FRAGMENT_POPUP_CLOSE_ACTION</Action>
                    </Click>
                    <Style>
                        <Colour>#000000</Colour>
                        <BorderColour>#FFFFFF</BorderColour>
                        <BorderW>2</BorderW>
                    </Style>
                </Widget>
            </Widgets>
            <Style>
                <Colour>#EAEEF2</Colour>
                <BorderColour>#00C8FA</BorderColour>
                <BorderW>2</BorderW>
                <Rounded>True</Rounded>
            </Style>
            <Hidden>True</Hidden>
        </Widget>
        <!-- TAB EXAMPLE -->
        <Widget>
            <Id>FragmentTabExample</Id>
            <Class>Fragment</Class>
            <H>250</H>
            <W>90%</W>
            <L>100</L>
            <AlignHoz>CENTER</AlignHoz>
            <AlignVert>CENTER</AlignVert>
            <Widgets>
                <!-- TAB 1 -->
                <Widget>
                    <Id>FragmentTab1</Id>
                    <Class>Fragment</Class>
                    <H>20%</H>
                    <W>100</W>
                    <L>100</L>
                    <X>1</X>
                    <Y>1</Y>
                    <Widgets>
                        <Widget>
                            <Class>Text</Class>
                            <Style>
                                <Colour>#000000</Colour>
                            </Style>
                            <Font>Arial</Font>
                            <FontSize>14</FontSize>
                            <Text>Tab 1</Text>
                            <AlignHoz>CENTER</AlignHoz>
                            <AlignVert>CENTER</AlignVert>
                        </Widget>
                    </Widgets>
                    <Style>
                        <Colour>#EAEEF2</Colour>
                    </Style>
                    <Click>
                        <Action>FRAGMENT_TAB1_ACTION</Action>
                    </Click>
                </Widget>
                <!-- TAB 2 -->
                <Widget>
                    <Id>FragmentTab2</Id>
                    <Class>Fragment</Class>
                    <H>20%</H>
                    <W>100</W>
                    <L>100</L>
                    <X>100</X>
                    <Y>1</Y>
                    <Widgets>
                        <Widget>
                            <Class>Text</Class>
                            <Style>
                                <Colour>#000000</Colour>
                            </Style>
                            <Font>Arial</Font>
                            <FontSize>14</FontSize>
                            <Text>Tab 2</Text>
                            <AlignHoz>CENTER</AlignHoz>
                            <AlignVert>CENTER</AlignVert>
                        </Widget>
                    </Widgets>
                    <Style>
                        <Colour>#FFFFFF</Colour>
                    </Style>
                    <Click>
                        <Action>FRAGMENT_TAB2_ACTION</Action>
                    </Click>
                </Widget>
                <!-- TAB CONTENT 1 -->
                <Widget>
                    <Id>FragmentContent1</Id>
                    <Class>Fragment</Class>
                    <H>80%</H>
                    <W>100%</W>
                    <L>100</L>
                    <X>0</X>
                    <AlignVert>BOTTOM</AlignVert>
                    <Widgets>
                        <Widget>
                            <Class>Text</Class>
                            <Style>
                                <Colour>#000000</Colour>
                            </Style>
                            <Font>Arial</Font>
                            <FontSize>14</FontSize>
                            <Text>Content for Tab 1</Text>
                            <AlignHoz>CENTER</AlignHoz>
                            <AlignVert>CENTER</AlignVert>
                        </Widget>
                    </Widgets>
                </Widget>
                <!-- TAB CONTENT 2 -->
                <Widget>
                    <Id>FragmentContent2</Id>
                    <Class>Fragment</Class>
                    <H>80%</H>
                    <W>100%</W>
                    <L>100</L>
                    <X>0</X>
                    <AlignVert>BOTTOM</AlignVert>
                    <Widgets>
                        <Widget>
                            <Class>Text</Class>
                            <Style>
                                <Colour>#000000</Colour>
                            </Style>
                            <Font>Arial</Font>
                            <FontSize>14</FontSize>
                            <Text>Content for Tab 2</Text>
                            <AlignHoz>CENTER</AlignHoz>
                            <AlignVert>CENTER</AlignVert>
                        </Widget>
                    </Widgets>
                    <Hidden>True</Hidden>
                </Widget>
            </Widgets>
            <Style>
                <Colour>#FFFFFF</Colour>
                <BorderColour>#000000</BorderColour>
                <BorderW>1</BorderW>
            </Style>
        </Widget>
        <!-- FOOTER -->
        <Widget>
            <Class>Fragment</Class>
            <H>50</H>
            <W>100%</W>
            <L>100</L>
            <AlignHoz>CENTER</AlignHoz>
            <AlignVert>BOTTOM</AlignVert>
            <Texts>
                <Widget>
                    <Class>Text</Class>
                    <Style>
                        <Colour>#000000</Colour>
                    </Style>
                    <Font>Arial</Font>
                    <FontSize>14</FontSize>
                    <Text>Fragment as Footer</Text>
                    <AlignHoz>CENTER</AlignHoz>
                    <AlignVert>CENTER</AlignVert>
                </Widget>
            </Texts>
            <Style>
                <Colour>#EAEEF2</Colour>
            </Style>
            <Click>
                <ClosePage>True</ClosePage>
            </Click>
        </Widget>
    </Widgets>
    <Style>
        <Colour>#00C8FA</Colour>
    </Style>
    <TransformationName>PAGE_SLIDE_RIGHT</TransformationName>
</Widget>
            