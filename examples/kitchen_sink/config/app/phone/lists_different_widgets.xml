<?xml version="1.0" encoding="UTF-8"?>
<Widget>
    <Id>DifferentWidgetsListPage</Id>
    <Class>StandardPage</Class>
    <PreLoad>True</PreLoad>
    <Widgets>
        <!-- HEADER -->
        <Widget>
            <Class>StandardHeader</Class>
            <Widgets>
                <Widget>
                    <Class>BackButton</Class>
                </Widget>
                <Widget>
                    <Class>StandardHeaderText</Class>
                    <Text>Simple Horizontal List</Text>
                </Widget>
            </Widgets>
        </Widget>
       <Widget>
            <Class>List</Class>
            <X>0</X>
            <W>100%</W>
            <H>90%</H>
            <L>1</L>
            <Y>50</Y>
            <GapSize>10</GapSize>
            <WidgetsCanBeMoved>False</WidgetsCanBeMoved>
            <Vertical>True</Vertical>
            <ShowOutOfArea>True</ShowOutOfArea>
            <Widgets>
                <Widget>
                    <Class>Image</Class>
                    <PreLoadImage>True</PreLoadImage>
                    <W>100</W>
                    <H>150</H>
                    <L>1</L>
                    <Src>img/lists/list_item_1.png</Src>
                </Widget>
                <Widget>
                    <Class>Fragment</Class>
                    <H>30</H>
                    <W>80%</W>
                    <L>1</L>
                    <Style>
                        <Colour>#CACACA</Colour>
                        <Rounded>True</Rounded>
                    </Style>
                </Widget>
                <Widget>
                    <Class>Image</Class>
                    <PreLoadImage>True</PreLoadImage>
                    <W>100</W>
                    <H>150</H>
                    <L>1</L>
                    <Src>img/lists/list_item_2.png</Src>
                </Widget>
                <Widget>
                    <Class>Circle</Class>
                    <Radius>60</Radius>
                    <L>1</L>
                    <Style>
                        <Colour>#000000</Colour>
                        <Transparency>100</Transparency>
                        <Gradient>
                            <Colours>
                                <Colour pos="0">#DF01D7</Colour>
                                <Colour pos="1">#F7FE2E</Colour>
                            </Colours>
                            <StartX>30</StartX>
                            <StartY>30</StartY>
                            <EndX>100</EndX>
                            <EndY>100</EndY>
                        </Gradient>
                    </Style>
                </Widget>
                <Widget>
                    <Class>Fragment</Class>
                    <H>50</H>
                    <W>50</W>
                    <L>1</L>
                    <Style>
                        <Colour>#000000</Colour>
                        <Transparency>100</Transparency>
                        <Rounded>True</Rounded>
                    </Style>
                </Widget>
            </Widgets>
        </Widget>
    </Widgets>
    <Style>
        <Colour>#FFFFFF</Colour>
    </Style>
    <TransformationName>PAGE_SLIDE_RIGHT</TransformationName>
</Widget>
            