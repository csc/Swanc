    <X>0</X>
    <Y>0</Y>
    <W>20%</W>
    <H>100%</H>
    <L>1</L>
    <PreLoad>True</PreLoad>
    <Widgets>
            <Widget>
                <Class>Fragment</Class>
                <H>50</H>
                <W>100%</W>
                <AlignHoz>LEFT</AlignHoz>
                <AlignVert>CENTER</AlignVert>
                <L>1000</L>
